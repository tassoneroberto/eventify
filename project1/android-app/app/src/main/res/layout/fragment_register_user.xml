<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_content" android:layout_width="match_parent" android:layout_height="fill_parent" android:layout_marginLeft="40dp" android:layout_marginRight="40dp">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/lll" android:layout_marginBottom="@dimen/margin_top_down_layout" android:layout_marginTop="@dimen/margin_top_down_layout">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_weight="1" android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_top_down_component" android:layout_marginTop="@dimen/margin_top_down_component">

                <EditText android:id="@+id/et_firstname" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_face_black_24dp" android:hint="First name" android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_top_down_component" android:layout_marginTop="@dimen/margin_top_down_component">

                <EditText android:id="@+id/et_lastname" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_face_black_24dp" android:hint="Last name" android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_top_down_component" android:layout_marginTop="@dimen/margin_top_down_component">

                <EditText android:id="@+id/et_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_email_black_24dp" android:hint="Email" android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_top_down_component" android:layout_marginTop="@dimen/margin_top_down_component">

                <EditText android:id="@+id/et_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_key_variant_black_24dp" android:hint="Password" android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_top_down_component" android:layout_marginTop="@dimen/margin_top_down_component">

                <EditText android:id="@+id/et_repeat_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_key_variant_black_24dp" android:hint="Repeat password" android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout android:id="@id/lll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_register" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/colorPrimary" android:text="Register" android:textColor="@android:color/white" />

        <TextView android:id="@+id/tv_login" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_top_down_component" android:layout_marginTop="@dimen/margin_top_down_component" android:text="Already Registered ? Login Now !" android:textAlignment="center" android:textColor="@color/colorAccent" />

        <ProgressBar android:id="@+id/progress" style="@style/Base.Widget.AppCompat.ProgressBar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_top_down_component" android:layout_marginTop="@dimen/margin_top_down_component" android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>