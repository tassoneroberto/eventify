<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context="com.company.eventify.login.IntroFragment">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/colorPrimary" android:orientation="vertical">


        <ImageView android:id="@+id/imageViewIntro" android:layout_width="match_parent" android:layout_height="450dp" android:layout_marginTop="16dp" app:srcCompat="@drawable/bg" />

        <TextView android:id="@+id/intro_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="48dp" android:layout_marginRight="48dp" android:layout_marginTop="16dp" android:text="@string/hello_blank_fragment" android:textColor="@android:color/white" android:textSize="20sp" />

        <TextView android:id="@+id/intro_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="48dp" android:textSize="16sp" android:layout_marginRight="48dp" android:text="@string/hello_blank_fragment" android:textColor="@color/colorPrimaryLight2" />

    </LinearLayout>

</FrameLayout>
